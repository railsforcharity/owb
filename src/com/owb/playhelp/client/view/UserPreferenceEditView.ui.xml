<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"> <!--  xmlns:up="urn:import:gwtupload.client"> -->
	<ui:style src="../resources/GlobalStyles.css">
		.important {
			font-weight: bold;
		}
		.profilePicture {
			text-align: right;
		}
		.myup div {
                font-style: italic;
        }
	</ui:style>
	<g:HTMLPanel><div class='{style.formContainer}'>
			<div class="{style.formTitle}">Friend Information</div>
			<table>
				<tr>
					<td>Name:</td>
					<td>
						<g:TextBox ui:field='nameField' />
					</td>
				</tr>
				<tr>
					<td>Email:</td>
					<td>
						<g:TextBox ui:field='emailField' />
					</td>
				</tr>
				<tr>
					<td>Picture Profile:</td>
					<td>
						<g:Image styleName='{style.profilePicture}' ui:field='profilePicture' width="92px" height="45px" altText="Profile Picture" />
					</td>
					<td>
						 <!-- <up:MultiUploader type="LABEL" ui:field="uploader" 
                          styleName="{style.myup}" maximumFiles="2" avoidRepeatFiles="true" validExtensions="mmm, ooo"/>
						
						<up:MultiUploader ui:field="uploaderField"/> -->
						<g:FormPanel ui:field="formPanel">
						<g:FileUpload name="profilePictureElement" ui:field="uploaderField"/>
						</g:FormPanel>
					</td>
					<td>
						<g:FlowPanel ui:field="pictureFrame"/>
					</td>
				</tr>
				<!--  Add there links to facebook and other social networks  -->
			</table>
			<hr/>
			
			<div class='{style.formButtons}'>
				<g:Button ui:field="cancelButton">cancel</g:Button>
				<g:Button ui:field="saveButton">save</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 