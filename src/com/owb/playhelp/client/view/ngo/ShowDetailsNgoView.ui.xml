<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:app='urn:import:com.owb.playhelp.client.view'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../../resources/GlobalStyles.css" >
	</ui:style>
	<g:HTMLPanel>
			<div class="{style.formTitle}">NGO Information</div>
			<table>
				<tr>
					<td>Name:</td>
					<td>
						<g:Label ui:field='nameField'>YOUR ORGANIZATION NAME</g:Label>
					</td>
				</tr>
				<tr>
					<td>Description:</td>
					<td>
						<g:Label ui:field='descField'>Write a brief description of your organization</g:Label>
					</td>
				</tr>
				<tr>
					<td>Address:</td>
					<td>
						<g:Label ui:field='addressField'>ADDRESS OF YOUR ORGANIZATION</g:Label>
					</td>
				</tr>
				<tr>
					<td>Phone:</td>
					<td>
						<g:Label ui:field='phoneField'>COTANCT PHONE OF YOUR ORGANIZATION</g:Label>
					</td>
				</tr>
				<tr>
					<td>Email:</td>
					<td>
						<g:Label ui:field='emailField'>ORGANIZATIONCONTACTEMAIL@YOURURLORGANIZATION.org</g:Label>
					</td>
				</tr>
				<tr>
					<td>Website:</td>
					<td>
						<g:Label ui:field='webField'>http://www.YOURURLORGANIZATION.org/</g:Label>
					</td>
				</tr>
				<tr>
					<td>Members:</td>
					<td>
						<g:Label ui:field='membersField'>No members</g:Label>
					</td>
				</tr>
				<tr>
					<td>Member Requests:</td>
					<td>
						<g:Label ui:field='membersReqField'>No members</g:Label>
					</td>
				</tr>
				<tr>
					<td>Followers:</td>
					<td>
						<g:Label ui:field='followersField'>No followers</g:Label>
					</td>
				</tr>
				<tr>
					<td>Abuse Reports:</td>
					<td>
						<g:Label ui:field='abuseReportField'>No abuse report</g:Label>
					</td>
				</tr>
				<tr>
					<td>NGO Reports:</td>
					<td>
						<g:Label ui:field='ngoReportField'>No NGO report</g:Label>
					</td>
				</tr>
				<tr>
					<td>Admin Report:</td>
					<td>
						<app:ListReportView ui:field='adminReportField'/>
					</td>
				</tr>
			</table>
		<div class='{style.button}'>
			<g:Anchor href='javascript:;' ui:field='okBut'>Ok</g:Anchor>
		</div>
		<div ui:field='nameDiv' />
	</g:HTMLPanel>
</ui:UiBinder> 