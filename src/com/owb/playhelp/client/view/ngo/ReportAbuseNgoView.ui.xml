<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../../resources/GlobalStyles.css" >
	</ui:style>
	<g:HTMLPanel>
	        <div class="{style.formTitle}"><g:Label ui:field="nameField">NGO NAME</g:Label></div>
			<div class="{style.formwrapper}">
				<div class="{style.formlabel}">
					<g:Label >Description:</g:Label>
				</div>
				<div class="{style.formfield}">
					<g:TextArea ui:field='descField' width="25em" height="25em">Write a brief description of your organization</g:TextArea>
				</div>
			</div>
		<div class='{style.button}'>
			<g:Anchor href='javascript:;' ui:field='saveBut'>Save</g:Anchor>
			<g:Anchor href='javascript:;' ui:field='cancelBut'>Cancel</g:Anchor>
		</div>
		<div ui:field='nameDiv' />
	</g:HTMLPanel>
</ui:UiBinder> 