<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.loading {
			width: 100%;
			padding: 55px ;
		}
	</ui:style>
	<g:HTMLPanel>
		List of Projects Around the World
		<g:Label ui:field='loadingLabel' styleName='{style.loading}'>Loading...</g:Label>
		<g:Button styleName="{style.important}" ui:field="addProjectButton">Add Project</g:Button>
		<g:ScrollPanel>
			<g:FlexTable ui:field='projectsTable' />
		</g:ScrollPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 