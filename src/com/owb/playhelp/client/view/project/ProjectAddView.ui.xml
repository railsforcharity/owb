<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../../resources/GlobalStyles.css" />
	<g:HTMLPanel>
			<div class="{style.formTitle}">Project Information</div>
			<table>
				<tr>
					<td>Project name:</td>
					<td>
						<g:TextBox ui:field='nameField' />
					</td>
				</tr>
				<tr>
					<td>Description:</td>
					<td>
						<g:TextBox ui:field='descField' />
					</td>
				</tr>
				<tr>
					<td>Chapter:</td>
					<td>
						<g:TextBox ui:field='chapterField' />
					</td>
				</tr>
				<tr>
					<td>Orphanage:</td>
					<td>
						<g:TextBox ui:field='orphanageField' />
					</td>
				</tr>
				<tr>
					<td>Ngo:</td>
					<td>
						<g:TextBox ui:field='ngoField' />
					</td>
				</tr>
			</table>
			<hr/>
			<h3>Resources</h3>
			<g:Button ui:field='addNeed'>+ add</g:Button>
			<div class='{style.help}'>Need ($)</div>
			<g:Label ui:field='loadingLabel'></g:Label>
			
			<g:FlexTable ui:field='needTable' />
			
			
			
			<div class='{style.formButtons}'>
				<g:Button ui:field="cancelButton">cancel</g:Button>
				<g:Button ui:field="saveButton">save</g:Button>
			</div>
	</g:HTMLPanel>
</ui:UiBinder> 